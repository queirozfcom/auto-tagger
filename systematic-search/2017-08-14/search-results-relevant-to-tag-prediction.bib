  document_type   = {Conference Paper},
  doi             = {10.1145/2463656.2463658},
  journal         = {Proceedings of the 4th International Workshop on Modeling Social Media: Mining, Modeling and Recommending 'Things' in Social Media, MSM 2013},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84879742614&doi=10.1145%2f2463656.2463658&partnerID=40&md5=3eb7e0049ea29948b89d5e09ef8ba324},
