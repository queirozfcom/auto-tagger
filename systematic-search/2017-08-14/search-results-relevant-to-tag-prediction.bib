  keywords        = {Social media, Personalized search, User profile, Folksonomy, Big data},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84906098184&doi=10.1016%2fj.neunet.2014.05.017&partnerID=40&md5=39447a0a20d45d1c447e5388c41d58aa},
