}

@Article{zhao_etal_2015a,
  author          = {Zhao, W. and Guan, Z. and Liu, Z.},
  title           = {Ranking on heterogeneous manifolds for tag recommendation in social tagging services},
  journal         = {Neurocomputing},
  year            = {2015},
