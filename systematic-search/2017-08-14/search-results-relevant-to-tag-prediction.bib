@Article{tibely_etal_2016,
  author        = {Tibély, G. and Pollner, P. and Palla, G.},
  title         = {Comparing the hierarchy of author given tags and repository given tags in a large document archive},
  journal       = {European Physical Journal: Special Topics},
  year          = {2016},
