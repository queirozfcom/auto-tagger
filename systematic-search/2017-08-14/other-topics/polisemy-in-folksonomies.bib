  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-72249112534&doi=10.1145%2f1639714.1639724&partnerID=40&md5=14b2704f6a3e9bc1c609cd739371214a},
}

@Conference{yeung_etal_2009,
  author          = {Yeung, C.-M.A. and Gibbins, N. and Shadbolt, N.},
  title           = {Contextualising tags in collaborative tagging systems},
