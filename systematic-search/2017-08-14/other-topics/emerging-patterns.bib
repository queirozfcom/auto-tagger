  doi       = {10.1109/CBMI.2012.6269846},
  issn      = {1949-3983},
  keywords  = {document handling;multimedia computing;Flickr related-tags;ImageCLEF 2011 collection;SOCFCS;annotation refinement;automatic photo annotation task;effective concept detection;independent concept detector training;multimedia document annotation;random walk;restart process;second order co-occurence Flickr context similarity measure;semantic content;semantic context relatedness;Context;Correlation;Google;Sea measurements;Semantics;Training data;Visualization},
}

@Article{ma_2012,
