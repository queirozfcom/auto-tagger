  author_keywords = {Bookmarks; Collaborative tagging; Expertise; Online activity; Social network analysis; Tags},
  document_type   = {Conference Paper},
  journal         = {ICWSM 2007 - International Conference on Weblogs and Social Media},
  page_count      = {8},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84893419176&partnerID=40&md5=0a59ad99eddd4b838d49284f5f995eb9},
}

@Article{cattuto_etal_2007,
