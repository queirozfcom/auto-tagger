@CONFERENCE{Gemmell200975,
author={Gemmell, J. and Schimoler, T. and Ramezani, M. and Mobasher, B.},
title={Adapting K-Nearest Neighbor for tag recommendation in Folksonomies},
journal={CEUR Workshop Proceedings},
year={2009},
